{
    "version": 3,
    "configurePresets": [
        {
            "name": "x86",
            "displayName": "Build for x86",
            "generator": "Unix Makefiles",
            "binaryDir": "build-x86",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "environment": {
                "CMAKE_BUILD_PARALLEL_LEVEL": "20"
            }
        },
        {
            "name": "rpi",
            "displayName": "Build for Raspberry Pi",
            "generator": "Unix Makefiles",
            "binaryDir": "build-rpi",
            "toolchainFile": "toolchains/arm-rpi-toolchain.cmake",
            "cacheVariables": {
                "CMAKE_SYSROOT": "/home/maxmaster/x-tools/aarch64-rpi3-linux-gnu/aarch64-rpi3-linux-gnu/sysroot"
            },
            "environment": {
                "CMAKE_BUILD_PARALLEL_LEVEL": "20"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "x86-build",
            "configurePreset": "x86",
            "jobs": 12,
            "targets": [
                "ldog_app",
                "ldog_service"
            ]
        },
        {
            "name": "rpi-build",
            "configurePreset": "rpi",
            "jobs": 12,
            "targets": [
                "ldog_service"
            ]
        }
    ]
}